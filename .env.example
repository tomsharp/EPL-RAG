# Copy this file to .env and fill in your values

# --- OpenAI ---
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# --- Weaviate (overridden in docker-compose for container networking) ---
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=50051
WEAVIATE_SECURE=false
COLLECTION_NAME=EplNews

# --- Embeddings ---
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# --- Ingestion schedule ---
INGEST_INTERVAL_MINUTES=30

# --- RAG settings ---
MAX_HISTORY_TURNS=5
MAX_CONTEXT_DOCS=5

# --- Live stats (football-data.org â€” free tier, leave blank to disable) ---
# Get a free key at: https://www.football-data.org/client/register
FOOTBALL_DATA_API_KEY=
STATS_CACHE_TTL_SECONDS=600

# --- Auth (leave blank to disable password protection) ---
APP_PASSWORD=
